<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
	<display-name>app_jsf_qit3</display-name>
	<welcome-file-list>
		<welcome-file>/index.xhtml</welcome-file>
 	</welcome-file-list>
	<context-param>
		<param-name>javax.faces.STATE_SAVING_METHOD</param-name>
		<param-value>server</param-value>
	</context-param>
	<session-config>
		<session-timeout>180</session-timeout>
		<tracking-mode>COOKIE</tracking-mode>
	</session-config>
	<servlet>
		<servlet-name>facesServlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>facesServlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>
	<context-param>
		<param-name>org.omnifaces.FACES_VIEWS_SCAN_PATHS</param-name>
		<param-value>/*.xhtml</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
		<param-value>true</param-value>
	</context-param>
	<filter>
		<filter-name>loggedFilter</filter-name>
		<filter-class>qetaa.jsf.filters.LoggedFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>loggedFilter</filter-name>
		<url-pattern>/_includes/*</url-pattern>
		<url-pattern>/successful</url-pattern>
		<url-pattern>/coming-soon</url-pattern>
	</filter-mapping>  
	<filter>
		<filter-name>notLoggedFilter</filter-name>
		<filter-class>qetaa.jsf.filters.NotLoggedFilter</filter-class>
	</filter>  
	<filter-mapping>
		<filter-name>notLoggedFilter</filter-name>
		<url-pattern>/_includes/*</url-pattern>
		<url-pattern>/my_orders</url-pattern>
		<url-pattern>/parts_order</url-pattern>
		<url-pattern>/past_orders</url-pattern>
		<url-pattern>/payment_response</url-pattern>
		<url-pattern>/coming-soon</url-pattern>
		<url-pattern>/loyalty</url-pattern>
	</filter-mapping>
	<context-param>
		<param-name>primefaces.UPLOADER</param-name>
		<param-value>native</param-value>
	</context-param>
	<context-param>
		<param-name>org.omnifaces.EXCEPTION_TYPES_TO_UNWRAP</param-name>
		<param-value>javax.ejb.EJBException,javax.persistence.RollbackException</param-value>
	</context-param>
	<error-page>
		<exception-type>javax.faces.application.ViewExpiredException</exception-type>
		<location>/error.xhtml</location>
	</error-page>
	<error-page> 
		<error-code>500</error-code>
		<location>/error.xhtml</location>
 	</error-page>
 	
</web-app>